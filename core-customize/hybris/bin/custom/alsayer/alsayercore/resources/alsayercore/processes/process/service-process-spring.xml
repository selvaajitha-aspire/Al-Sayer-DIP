<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
    <context:annotation-config/>

	<!-- RSA Process Actions -->

    <bean id="createServiceRequestAction" class="com.alsayer.core.actions.service.CreateServiceRequestAction"  parent="abstractAction">
        <property name="configurationService" ref="configurationService"/>
        <property name="posService" ref="posService"/>
        <property name="googleMapTools" ref="googleMapTools"/>

    </bean>
    <bean id="getTechnicianLocationAction" class="com.alsayer.core.actions.service.GetTechnicianLocationAction"  parent="abstractAction">
        <property name="configurationService" ref="configurationService"/>
    </bean>

    <alias name="defaultGoogleMapTools" alias="googleMapTools"/>
    <bean id="defaultGoogleMapTools" class="de.hybris.platform.storelocator.impl.GoogleMapTools" scope="prototype">
        <property name="addressLocationParser" ref="firstPlacemarkWinsGoogleResponseParser"/>
        <property name="routeDataParser" ref="routeDataGoogleResponseParser"/>
        <property name="directionsUrlBuilder" ref="geolocationDirectionsUrlBuilder"/>
        <property name="googleKey" value="#{configurationService.configuration.getProperty('google.geocoding.apikey')}"/>
    </bean>
</beans>
